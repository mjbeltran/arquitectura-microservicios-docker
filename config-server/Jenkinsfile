node {

    withMaven(maven:'maven') {

        stage('Checkout') {
            git url: 'https://github.com/mjbeltran/arquitectura-microservicios-docker.git', credentialsId: 'github-mjbeltran', branch: 'master'
        }

        stage('Build') {
            sh 'pwd'
            sh 'cd config-server'
            sh 'pwd'
            sh 'ls'
            sh 'mvn clean install'
            def pom = readMavenPom file:'pom.xml'
            print pom.version
            env.version = pom.version
        }

        stage('Image') {
            dir ('eureka-server') {
                def app = docker.build "localhost:8888/config-server:${env.version}"
                app.push()
            }
        }

        stage ('Run') {
            docker.image("localhost:8888/config-server:${env.version}").run('-p 8888:8888 -h discovery --name discovery')
        }
        
        stage ('Final') {
            build job: 'eureka-server', wait: false
        }      
    }

}
