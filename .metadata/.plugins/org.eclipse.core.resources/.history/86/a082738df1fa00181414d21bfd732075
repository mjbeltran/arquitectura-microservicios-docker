FROM java:8-jdk

ENV DOCKERIZE_VERSION v0.2.0
RUN wget https://github.com/jwilder/dockerize/releases/download/$DOCKERIZE_VERSION/dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz \
    && tar -C /usr/local/bin -xzvf dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz

RUN mkdir /app
WORKDIR /app
COPY build/libs/deneb-0.1-SNAPSHOT.jar /app
ENTRYPOINT ["dockerize", "-timeout", "5m", "-wait", "http://config-server:8888/health", "java", "-Djava.security.egd=file:/dev/./urandom", "-jar", "/app/deneb-0.1-SNAPSHOT.jar", "--spring.profiles.active=docker"]
EXPOSE 3331

FROM java:8-jre
MAINTAINER mjbeltran

ADD ./target/EmailService-0.0.1-SNAPSHOT.jar /app/
CMD ["java", "-Xmx200m", "-jar", "/app/EmailService-0.0.1-SNAPSHOT.jar"]

EXPOSE 2222